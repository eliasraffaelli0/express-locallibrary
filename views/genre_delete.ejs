<%- include('header') -%> 
    <h1><%= title +': '+ genre.title %> </h1>

    <% if(genre_books.length > 0){ %> 
        <p>Delete the following books before attempting to delete this genre.</p>
        <div style='margin-left:20px;margin-top:20px'>
            <h4>Books</h4>
            <dl>
                <% Object.keys(genre_books).forEach(book => { %>
                    <dt>
                        <a href="<%= genre_books[book].url %>"><%= genre_books[book].title %> </a>
                    </dt>
                    <dd><%= genre_books[book].summary %> </dd>
                <% }) %> 
            </dl>
        </div>
    <% } else{ %>
        <p>Do you really want to delete this Genre?</p>
        <form action="" method="POST">
            <div class="form-group">
                <input id="genreid" type="hidden" name="genreid" value="<%= genre._id %> ">
                <button class="btn-primary" type="submit">Delete</button>
            </div>
        </form>
    <% } %>  
<%- include('footer') -%> 