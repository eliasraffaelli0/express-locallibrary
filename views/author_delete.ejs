<%- include('header') -%> 
    <h1><%= title +': '+ author.name %> </h1>
    <p><%= author.lifespan %> </p>

    <% if(author_books.length > 0){ %> 
        <p>Delete the following books before attempting to delete this author.</p>
        <div style='margin-left:20px;margin-top:20px'>
            <h4>Books</h4>
            <dl>
                <% Object.keys(author_books).forEach(book => { %>
                    <dt>
                        <a href="<%= author_books[book].url %>"><%= author_books[book].title %> </a>
                    </dt>
                    <dd><%= author_books[book].summary %> </dd>
                <% }) %> 
            </dl>
        </div>
    <% } else{ %>
        <p>Do you really want to delete this Author?</p>
        <form action="" method="POST">
            <div class="form-group">
                <input id="authorid" type="hidden" name="authorid" value="<%= author._id %> ">
                <button class="btn-primary" type="submit">Delete</button>
            </div>
        </form>
    <% } %>  
<%- include('footer') -%> 