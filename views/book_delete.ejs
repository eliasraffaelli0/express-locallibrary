<%- include('header') -%> 
    <h1><%= title +': '+ book.title %> </h1>
    <p><%= book.lifespan %> </p>

    <% if(book_bookinstances.length > 0){ %> 
        <p>Delete the following bookinstances before attempting to delete this book.</p>
        <div style='margin-left:20px;margin-top:20px'>
            <h4>bookinstances</h4>
            <dl>
                <% Object.keys(book_bookinstances).forEach(bookinstances => { %>
                    <dt>
                        <a href="<%= book_bookinstances[bookinstances].url %>"><%= book_bookinstances[bookinstances].id %> </a>
                    </dt>
                <% }) %> 
            </dl>
        </div>
    <% } else{ %>
        <p>Do you really want to delete this book?</p>
        <form action="" method="POST">
            <div class="form-group">
                <input id="bookid" type="hidden" name="bookid" value="<%= book._id %> ">
                <button class="btn-primary" type="submit">Delete</button>
            </div>
        </form>
    <% } %>  
<%- include('footer') -%> 