<%- include('header') -%> 
    <h1>ID: <%= bookinstance._id %> </h1>

    <p>Title: <a href="<%= bookinstance.book.url %> "><%= bookinstance.book.title %> </a></p>
    <p>Imprint: <%= bookinstance.imprint %> </p>

    <p>Status: <%= bookinstance.status %> </p>
    <% if(bookinstance.status != 'Available'){ %> 
        <p>Due back: <%= bookinstance.due_back_formatted %> </p>
    <% } %> 

    <p>Do you really want to delete this bookinstance?</p>
    <form action="" method="POST">
        <div class="form-group">
            <input id="bookinstanceid" type="hidden" name="bookinstanceid" value="<%= bookinstance._id %> ">
            <button class="btn-primary" type="submit">Delete</button>
        </div>
    </form>
<%- include('footer') -%> 