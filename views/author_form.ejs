<%- include('header') -%> 

    <h1><%= title %> </h1>

    <form method='POST' action=''>
        <div class="form-group">
            <label for="first_name">Fisrt name:</label>
            <input id="first_name" type="text" class="form-control" name="first_name" placeholder="First name" value="<%= typeof author==="undefined" ? '' : author.first_name %>">
            <label for="family_name">family name:</label>
            <input id="family_name" type="text" class="form-control" name="family_name" placeholder="family name" value="<%= typeof author==="undefined" ? '' : author.family_name %>">
        </div>
        <div class="form-group">
            <label for="date_of_birth">Date of birth</label>
            <input id="date_of_birth" class="form-control" type="date" name="date_of_birth" value="<%= typeof author==="undefined" ? '' : author.date_of_birth_yyyy_mm_dd %>">
        </div>
        <div class="form-group">
            <label for="date_of_death">Date of death</label>
            <input id="date_of_death" class="form-control" type="date" name="date_of_death" value="<%= typeof author==="undefined" ? '' : author.date_of_death_yyyy_mm_dd %>">
        </div>
        <button class="btn-primary" type="submir">Submit</button>
    </form>
    
    <% if (typeof errors!=="undefined") { %> 
        <ul>
            <% Object.keys(errors).forEach(error => { %>
                <li><%= errors[error].msg %> </li>
            <%  }); %> 
        </ul>
    <% } %> 

<%- include('footer') -%> 